{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@betaschool-reborn/beta-data-type": ["libs/beta-data-type/src/index.ts"],
      "@betaschool-reborn/coreui-lib": ["libs/coreui-lib/src/index.tsx"],
      "@betaschool-reborn/database-model": ["libs/database-model/src/index.ts"],
      "@betaschool-reborn/database-model/*": ["libs/database-model/src/*"],
      "@betaschool-reborn/things-pub-sub": ["libs/things-pub-sub/src/index.ts"],
      "@betaschool-reborn/vital-test/redux": [
        "libs/vital-test/redux/src/index.ts"
      ],
      "@betaschool-reborn/vital-test/utils": [
        "libs/vital-test/utils/src/index.ts"
      ],
      "@betaschool/coreui-lib/*": ["libs/coreui-lib/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
